if "D-SLS-PC-L01-JP" == nodename then
  lan = "enp3s0"
  mounts = {"/", "/tmp", "/home", "nbcache"}
elseif "pv01.home" then
  lan = "wlp9s0"
  mounts = {"/", "/tmp", "/home", "/media/local", "/media/data"}
end

function dirGraphs()
  local tplString = ""
  for i, mount in ipairs(mounts) do
    tplString = tplString .. string.format([[${color white}%s\
${alignr} ${fs_used %s} / ${fs_size %s}
${fs_bar 8 %s}
]], mount,mount,mount,mount)
  end
  return tplString
end

